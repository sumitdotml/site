---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Link from "../components/Link.astro";
import { SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`404: Page Not Found | ${SITE_TITLE}`}
			description="can't find the page you're looking for chief"
		/>
	</head>
	<body>
		<main class="not-found-page">
			<div class="not-found-content">
				<h1 class="error-code">404</h1>
				<h2 class="error-title">Page Not Found</h2>
				<p class="error-description">
					hmm.. I don't think this page exists, maybe check out the links below?
				</p>

				<Link href="/">Home</Link>
				<span class="separator">·</span>
				<Link href="/blog">Blog</Link>
				<span class="separator">·</span>
				<Link href="/about">About</Link>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.not-found-page {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: calc(100vh - 280px);
		padding: 3em 1em;
	}

	.not-found-content {
		text-align: center;
		max-width: 600px;
		width: 100%;
	}

	.error-code {
		font-size: 12em;
		font-weight: var(--font-weight-semibold);
		font-family: var(--font-family-code);
		margin: 0;
		padding: 0;
		line-height: 0.9;
		letter-spacing: 0.15em;
		background: linear-gradient(
			135deg,
			var(--text-color) 0%,
			var(--accent-purple) 80%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.error-title {
		font-size: 1.8em;
		font-weight: var(--font-weight-medium);
		margin: 0.5em 0 0 0;
		padding: 0;
	}

	.error-description {
		font-size: 1em;
		color: var(--text-color-light);
		margin: 1em 0 2em 0;
		line-height: 1.6;
	}

	.separator {
		color: var(--text-color-muted);
		user-select: none;
	}

	@media (max-width: 720px) {
		.not-found-page {
			min-height: calc(100vh - 260px);
			padding: 2.5em 1em;
		}

		.error-code {
			font-size: 9em;
			letter-spacing: 0.12em;
		}

		.error-title {
			font-size: 1.6em;
			margin: 0.6em 0 0 0;
		}

		.error-description {
			font-size: 0.95em;
			margin: 0.9em 0 1.8em 0;
		}
	}

	@media (max-width: 480px) {
		.not-found-page {
			min-height: calc(100vh - 240px);
			padding: 2em 0.75em;
		}

		.error-code {
			font-size: 7em;
			letter-spacing: 0.1em;
		}

		.error-title {
			font-size: 1.4em;
			margin: 0.7em 0 0 0;
		}

		.error-description {
			font-size: 0.9em;
			margin: 0.85em 0 1.6em 0;
		}
	}

	@media (max-width: 360px) {
		.not-found-page {
			min-height: calc(100vh - 220px);
			padding: 1.75em 0.5em;
		}

		.error-code {
			font-size: 5.5em;
			letter-spacing: 0.08em;
		}

		.error-title {
			font-size: 1.25em;
			margin: 0.75em 0 0 0;
		}

		.error-description {
			font-size: 0.85em;
			margin: 0.8em 0 1.5em 0;
		}
	}
</style>
